<Project>
  <ItemGroup>
    <!-- 
      Arcade SDK only automatically signs nupkg and vsix. Adding more container types and specific dlls not generated by the build.
    -->
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\*.zip" />
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\*.mpack" />
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\EmptyPKT.dll" />
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\CustomTargetFrameworkAttribute.dll" />
    <ItemsToSign Include="$(ArtifactsPackagesDir)**\SignedLibrary.dll" />
  </ItemGroup>

  <ItemGroup>
    <!--
      Some of the test container dlls are reported as third party,
      so add them here so that they can be double signed.
    -->
    <FileSignInfo Include="ProjectOne.dll" CertificateName="3PartySHA2" />
    <FileSignInfo Include="ContainerOne.dll" CertificateName="3PartySHA2" />
    <FileSignInfo Include="ContainerTwo.dll" CertificateName="3PartySHA2" />
    <FileSignInfo Include="EmptyPKT.dll" CertificateName="3PartySHA2" />
    <FileSignInfo Include="CustomTargetFrameworkAttribute.dll" CertificateName="3PartySHA2" />
    <FileSignInfo Include="VisualStudio.Mac.Banana.dll" CertificateName="3PartySHA2" />
  </ItemGroup>
</Project>